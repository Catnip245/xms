    public void compareMuscle() {
    	if (getGender() == 1) {
    		if (getAge() >= 20 && getAge() <= 29) {
    			if (getMuscle() >= 43) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else if (getAge() >= 30 && getAge() <= 39) {
    			if (getMuscle() >= 40) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else if (getAge() >= 40 && getAge() <= 49) {
    			if (getMuscle() >= 37) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else if (getAge() >= 50 && getAge() <= 59) {
    			if (getMuscle() >= 34) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else {
                System.out.println("입력한 나잇대 정보가 없음");
            }
    	}
    	else if (getGender() == 2) {
    		if (getAge() >= 20 && getAge() <= 29) {
    			if (getMuscle() >= 34) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else if (getAge() >= 30 && getAge() <= 39) {
    			if (getMuscle() >= 32) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else if (getAge() >= 40 && getAge() <= 49) {
    			if (getMuscle() >= 30) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else if (getAge() >= 50 && getAge() <= 59) {
    			if (getMuscle() >= 28) {
    				System.out.println("근육량 평균 이상");
    			}
    			else {
    				System.out.println("근육량 평균보다 낮음");
    			}
    		}
    		else {
                System.out.println("입력한 나잇대 정보가 없음");
            }
    	}
    }
}
